        <!-- Ingresar Pelicula -->
        <main id="main-principal" role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4 principal">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom ">
                  <h1 class="h1">Ingresar Compañía Productora</h1>
                </div>
                <form action="/addProductora" method="POST">
                  <div class="row principal">
                    <div class="col-md-12 mb-3">
                      <label for="nombre">Nombre de la Compañia</label>
                      <input type="text" class="form-control" name="nombre" id="nombre" placeholder="Nombre" value="" required>
                      <div class="invalid-feedback">
                        Digite un nombre válido
                      </div>
                    </div>
                  </div>
      
                  <div class="row principal">
                    <div class="col-md-4 mb-3">
                      <label for="ano">Año de fundación</label>
                      <input type="number" class="form-control" name="ano" id="ano" placeholder="Año de fundación" value="" required>
                      <div class="invalid-feedback">
                        Debe especificar año de fundación
                      </div>
                    </div>
                    <div class="col-md-8 mb-3">
                      <label for="sitio">Sitio Web</label>
                      <input type="text" class="form-control" name="sitio" id="sitio" placeholder="Sitio web" value="" required>
                      <div class="invalid-feedback">
                        Debe especificar el sitio web de la compañía
                      </div>
                    </div>      
                  <hr class="mb-4">
      
                  <button id="btn-agregarProductora" class="btn btn-primary btn-lg btn-block mb-5" type="submit">Agregar Compañía</button>
                </form>
              </main>


      </div>
    </div>

    <div class="container">
        <div class="row">
                <!-- Table -->
                <div class="col-md-12">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Fundación</th>                          
                                <th>Sitio</th>
                            </tr>
                        </thead>
                        <tbody>
                          <% for(var i = 0; i < productoras.length; i++) { %>
                          <tr>
                            <td> <%= productoras[i].nombre %> </td>
                            <td> <%= productoras[i].ano %> </td>
                            <td> <%= productoras[i].sitio %> </td>
                          </tr>
                          <% } %>
                        </tbody>
                    </table>                      
                  </div>
            </div>   
  </div>

