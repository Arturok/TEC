        <!-- Pelicula por nombre -->
        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
          <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
            <h1 class="h2">Estadísticas de una Compaía Productora</h1>
          </div>
          <div class="container">
              <div class="row">
                  <!-- Form -->
                  <div class="col-md-12">
                      <div class="card">
                          <div class="card-body">
                              <form action="/estadisticas" method="POST">
                                  <div class="form-group">
                                      <label for="productora">Estadísticas de Compañia Productora</label>
                                      <input type="text" name="productora" placeholder="Nombre de la Compañia Productora" class="form-control">
                                  </div>
                                  <button type="submit" class="btn btn-primary btn-block">Ver</button>
                              </form>
                          </div>
                      </div>                      
                  </div>
              </div>             
          </div>
          <div class="container">
              <div class="row">
                  <!-- Form -->
                  <div class="col-md-12">
                      <div class="card">
                          <div class="card-body">
                              <label>
                                Cantidad de películas:
                              </label>
                              <label>
                                <%= peliculas.length %>
                              </label>
                          </div>
                          <div class="card-body">
                              <label>
                                Película de menor duración:
                              </label>
                              <label>
                                <% var min = {}; %>
                                <% var max = {}; %>
                                <% var sum = 0; %>
                                <% for(var i = 0; i < peliculas.length; i++) { %>
                                  <% if (sum == 0) { min = max = peliculas[i]; }%>
                                  <% if (peliculas[i].duracion < min.duracion) { min = peliculas[i]; } %>
                                  <% if (peliculas[i].duracion > max.duracion) { max = peliculas[i]; } %>
                                  <% sum += peliculas[i]. duracion; %>
                                <% } %>
                                <% var prom = sum / peliculas.length; %>
                                <%= min.nombre  %>
                              </label>
                          </div>
                          <div class="card-body">
                              <label>
                                Película de mayor duración:
                              </label>
                              <label>
                                <%= max.nombre %>
                              </label>
                          </div>
                          <div class="card-body">
                              <label>
                                Duración promedio:
                              </label>
                              <label>
                                <%= prom  %>
                              </label>
                          </div>
                      </div>                      
                  </div>
              </div>             
          </div>
        </main>


      </div>
